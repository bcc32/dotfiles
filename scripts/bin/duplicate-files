#!/bin/bash

set -euo pipefail

digests_file=$(mktemp)
duplicates_file=$(mktemp)

echo 'digesting...'

find . -type f |
    parallel --bar -X md5sum |
    sort \
        > "$digests_file"

echo 'digesting... done'

sed 's/  /\t/' "$digests_file" |
    cut -f 1 |
    uniq -d \
         > "$duplicates_file"

join "$duplicates_file" "$digests_file"
